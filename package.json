{
  "name": "gandalf-chatbot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs": "typedoc",
    "test:fast": "jest --maxWorkers=50% --onlyChanged",
    "test:ci": "jest --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:parallel": "jest --maxWorkers=100%",
    "test:update": "jest --updateSnapshot",
    "test:speed": "jest --config jest.speed.config.js",
    "test:dev": "jest --config jest.speed.config.js --bail --onlyChanged --maxWorkers=100%"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.0.1",
    "@trendmicro/react-toggle-switch": "^0.5.7",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.8.4",
    "lru-cache": "^11.1.0",
    "next": "^15.3.0",
    "openai": "^4.94.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^22",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.3.0",
    "ipinfo": "^1.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "ts-jest": "^29.3.1",
    "typedoc": "^0.28.2",
    "typedoc-plugin-markdown": "^4.6.2",
    "typescript": "^5"
  }
}
